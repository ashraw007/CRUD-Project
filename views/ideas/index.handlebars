{{#each ideas}}
    <div class="card card-body mb-2">
        <h5>{{title}}</h5>
        <p>{{details}}</p>
        <a class="btn btn-dark btn-block mb-2" href="/ideas/edit/{{_id}}">Edit Idea</a>

        <form action="/ideas/{{_id}}?_method=DELETE" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <input type="submit" class="btn btn-primary btn-block" value="DELETE">
        </form>
    </div>
{{else}}
    <p>No video idea listed</p>
{{/each}}